@model miranaSolution.API.ViewModels.Users.ApiAssignRolesRequest
@{
    ViewData["title"] = "Assign Roles For User #" + ViewData["UserId"];
}

<h1 class="mt-4">Assign Roles For User #@ViewData["UserId"]</h1>
<div class="card mb-4">
    <div class="card-header">
        <a asp-action="Index" class="btn btn-danger">Back</a>
    </div>
    <div class="card-body">
        <form enctype="multipart/form-data" asp-action="AssignRoles" method="POST">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mt-4">
                <label>Roles</label>
                @for (var index = 0; index < Model.RoleCheckboxItems.Count; ++index)
                {
                    <div class="form-check">
                        <input class="form-check-input"
                               type="checkbox"
                               asp-for="RoleCheckboxItems[index].IsChecked"/>
                        <label class="form-check-label" asp-for="RoleCheckboxItems[index].IsChecked">@Model.RoleCheckboxItems[index].Label</label>
                        <input type="hidden" asp-for="RoleCheckboxItems[index].Id"/>
                        <input type="hidden" asp-for="RoleCheckboxItems[index].Label"/>
                    </div>
                }
            </div>

            <button type="submit" class="btn btn-primary mt-4">Submit</button>
        </form>
    </div>
</div>
