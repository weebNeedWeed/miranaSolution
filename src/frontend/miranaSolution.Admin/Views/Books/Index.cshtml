@model miranaSolution.Dtos.Common.PagedResult<miranaSolution.Dtos.Catalog.Books.BookDto>

<h1 class="mt-4">Books</h1>
<div class="card mb-4">
    <div class="card-header">
        <a asp-action="Create" class="btn btn-success"><i class="fa-solid fa-plus"></i> Create new</a>
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Author</th>
                <th>Updated At</th>
                <th>Is Recommended</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var book in Model.Items)
            {
                <tr>
                    <td>@book.Id</td>
                    <td>@book.Name</td>
                    <td>@book.AuthorName</td>
                    <td>@book.UpdatedAt</td>
                    <td>
                        @if (book.IsRecommended)
                        {
                            <div class="text-success">
                                <i class="fa-solid fa-check"></i>
                            </div>
                        }
                        else
                        {
                            <div class="text-danger">
                                <i class="fa-solid fa-xmark"></i>
                            </div>
                        }
                    </td>
                    <td></td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    
    <div class="card-body">
        @await Component.InvokeAsync("Pager", Model)
    </div>
    
</div>